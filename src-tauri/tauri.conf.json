{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "maccha",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"http": {
				"scope": ["https://**", "http://localhost*/**"]
			}
		},
		"bundle": {
			"active": true,
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "net.kyza.maccha",
			"targets": "all"
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"macOSPrivateApi": true,
		"windows": [
			{
				"label": "main",
				"skipTaskbar": true,
				"fullscreen": false,
				"resizable": true,
				"decorations": false,
				"center": true,
				"alwaysOnTop": true,
				"visible": true,
				"title": "Maccha",
				"width": 800,
				"height": 600
			}
		]
	}
}
